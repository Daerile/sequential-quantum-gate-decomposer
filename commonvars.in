# Set configuration if not given
# Possible configurations: GNU, INTEL
ifndef COMPILER
COMPILER = INTEL
endif

# Possible configurations: static, dynamic
ifndef LINKING
LINKING = dynamic
endif

ifndef QGDDIR
QGDDIR = /home/rakytap/quantum-gate-decomposer_C
endif



ifndef THREAD
THREAD = PAR
endif

PLATFORM = Linux

QGDLIBDIR=$(QGDDIR)/lib/bin
QGDOBJDIR=$(QGDDIR)/lib/bin/$(PLATFORM)

ifeq ($(THREAD),PAR)
  ifndef GSLDIR
    GSLDIR = /home/rakytap/gsl
  endif
else ifeq ($(THREAD),MIC)
  ifndef GSLDIR
    GSLDIR = /home/rakytap/gsl_MIC
  endif
endif

GSLINCLUDEDIR = $(GSLDIR)/include
GSLLIBDIR = $(GSLDIR)/lib


LIBNAME = qgd





# Set the compiler and the compiler specific flags
COMPILER_C = icc 
LD = icpc

# Variables to export to sub-makes
export PLATFORM
export COMPILER
export COMPILER_C
export LD
export QGDLIBDIR
export QGDMODDIR
export QGDOBJDIR
export LIBNAME
